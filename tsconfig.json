{
  "extends": "@deftomat/opinionated/tsconfig.json",
  "compilerOptions": {
    "isolatedModules": false,
    "lib": ["es2017"],
    "jsx": "preserve",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "target": "esnext",
    "outDir": "./dist",
    "declaration": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "./dist"]
}
